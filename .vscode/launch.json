    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "tools/copy_rule_to_quark_rules.py",
            "args": [
                "-r",
                "/mnt/storage/data/rule_to_release/golddream/rule_added.csv",
                "-b",
                "/mnt/storage/data/generated_rules",
                "-q",
                "/mnt/storage/data/quark_rules",
                "-i",
                "1000"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
